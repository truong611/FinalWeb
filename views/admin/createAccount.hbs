<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Create Account</title>
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/updatecoordinator.css">
  <link rel="stylesheet" href="/css/homemanage.css">
  <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
  <title>Document</title>
</head>
<style>
  .header {
    text-align: center;
    display: flex;
    flex-direction: row;

    align-items: center;
    font-family: "Times New Roman", Times, serif;
  }

  .header p {
    font-size: 25px;
    text-align: center;
       font-family: "Times New Roman", Times, serif;
    color: black;
    font-weight: 300;
    margin-left: 45%;
  }

  .header img {
    margin-left: 10%;
  }
</style>

<body>

  <div class="wrapper">
    <div class="sidebar">
      <h2>CMS</h2>
      <ul>
        <li><a href="/account/indexAdmin"><i class="fas fa-home"></i>Home</a></li>
        <li><a href="/faculty/allfaculty"><i class="fas fa-user"></i>Category</a></li>
        <li><a href="/manage/allManager"><i class="fas fa-project-diagram"></i>All Account</a></li>
        <li><a href="/admin/createAccount"><i class="fas fa-blog"></i>Create account</a></li>
        <li><a href="/faculty/create"><i class="fas fa-address-book"></i>Create Category</a></li>
        
        <li id="popupsettime">Set Time</li>
        <li><a href="/logout"><i class="fas fa-map-pin"></i>Log Out</a></li>
      </ul>
      <div class="social_media">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
    <div class="main_content">
      <div class="header">
        <img
          src="https://media-exp1.licdn.com/dms/image/C4D16AQFi_ge0eaXLXA/profile-displaybackgroundimage-shrink_200_800/0/1621947470738?e=1649894400&v=beta&t=_dIkTACPLTPu6qF-iA-az61KJbAAjjxJkpvnqo2vUBQ"
          alt="CMS" width="200" height="50">
        <p>CREATE ACCOUNT</p>
      </div>
      <div class="info">
        <form method="post" action="/admin/docreateAccount">
          <div class="swap">
            <div class="form-group">
              <label for="facultyname">Name</label>
              <input type="text" name="username" pattern="[a-zA-Z\s]+"
                title="Username shouldn't contain number. e.g. john" required>
            </div><br>
            <div class="form-group">
              <label for="topic">Email</label>
              <input type="email" name="email" class="emailinput">
            </div><br>
            <div class="form-group">
              <label for="topic">Password</label>
              <input type="password" name="password"
                title="Password needs to be at least 8 characters without special characters (/,?, Etc)" minlength="8"
                pattern="[a-zA-Z0-9]+" required class="pwinput">
            </div><br>
            <div class="form-group">
              <label for="topic">Role</label>
              <select class="Role" name="Role">
               
                <option value="student">Staff</option>
                <option value="coordinator">QAC</option>
                <option value="manager">QAM</option>
              </select>
            </div>
            <div class="form-group">
              <label for="topic" style=" color: red ">{{message}}</label><br>
            </div>
            <br>
            <div class="form-group">
              <label for="topic">Birthday</label>
              <input type="date" name="birthday" style="width:173px" required class="emailinput">
            </div><br>
            <div class="form-group">
              <label for="topic">Phone</label>
              <input type="text" name="phone" class="emailinput" pattern="(\+84|0)\d{8,10}" minlength="8" maxlength="10"
                title="Phone number must not contain letters or any other characters.Phone number must be between 8-10 numbers."
                required>
            </div><br>
            <div class="form-group">
              <label for="topic">Address</label>
              <input type="text" name="address" class="emailinput" required>
            </div><br>
            <button type="submit" class="btn5">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <p> Set deadlines for all Staff</p>
      <input type="date" name="date" id="date">
      <input type="time" name="time" id="time"><br>
      <input type="submit" id="btnUpdate2" value="Submit">
    </div>

  </div>
  <script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("popupsettime");
    var btn2 = document.getElementById("btnUpdate2");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal 
    btn.onclick = function () {
      modal.style.display = "block";
    }
    btn2.onclick = function () {
      $.ajax({
        url: "/manage/settime",
        method: "post",
        data: {
          date: $("#date").val(),
          time: $("#time").val(),
        },
        cache: false,
        success: function (data) {
          // data is the object that you send form the server by 
          // res.jsonp();
          // here data = {success : true}
          // validate it
          if (data['success']) {
            alert("Settime success");
          }
        },
        error: function () {
          // some error handling part
          alert("Oops! Something went wrong.");
        }
      });
      modal.style.display = "none";
    }
    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    }


    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  </script>


</body>

</html>